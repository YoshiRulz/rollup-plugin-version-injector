{
	"compilerOptions": {
		"module": "ES6",
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"removeComments": true,
		"noImplicitAny": false,
		"rootDir": "./src",
		"outDir": "./dist",
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"esModuleInterop": true,
		"strict": true,
	},
	"exclude": [
		"node_modules",
		"**/test/*"
	],
	"include": [
		"src/**/*.ts"
	],
}